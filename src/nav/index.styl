@require '_lib'

#nav
	position absolute
	width navbar-width
	left 0
	bottom 0
	user-select none
	background rgba(#000, 0.5)
	top 0
	padding-top header-height


.nav-btn
	display block
	width 44px
	height 44px
	margin 14px auto
	border-radius 25px
	background #2C384D
	text-decoration none
	position relative
	transition background-color .3s ease-out

	&.hidden
		display none

	.icon
		display block
		width 100%
		height 100%
		background-color #fff
		-webkit-mask-repeat no-repeat
		-webkit-mask-position center
		margin-bottom -100%


	&:hover
		background #43516D

	&.active
		background-color #fff

		.icon
			background-color #111B2D


	& .badge
		position absolute
		right -8px
		top -8px
		height 18px
		min-width 18px
		padding 3px 4px 0
		text-align center
		border-radius 100px
		font-size 11px
		line-height 1
		font-weight 100
		color #fff
		background rgba(220, 73, 61, 0.95)
		box-shadow 0 1px 2px rgba(0, 0, 0, .5)



.nav-bookmarks .icon
	-webkit-mask-image url("../assets/icon-bookmark.svg")


.nav-notifications .icon
	-webkit-mask-image url("../assets/icon-bell.svg")


.nav-myissues .icon
	-webkit-mask-image url("../assets/icon-inbox.svg")


.nav-projects .icon
	-webkit-mask-image url("../assets/icon-projects.svg")


.nav-update .icon
	-webkit-mask-image url("../assets/icon-update.svg")


.nav-settings .icon
	-webkit-mask-image url("../assets/icon-settings.svg")




.nav-bottom
	position absolute
	left 0
	right 0
	bottom 0

.nav-update
	background #4D7321

	&:hover
		background #82B209

	&.progress
		background #2C384D
		cursor default